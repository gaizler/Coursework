<Page x:Class="TestServer.Pages.ShowGroups"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestServer.Pages"
      xmlns:viewModels="clr-namespace:TestServer.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ShowGroups">
    <Page.DataContext>
        <viewModels:ShowGroupsViewModel></viewModels:ShowGroupsViewModel>
    </Page.DataContext>
    <Grid>
        <DataGrid Style="{StaticResource dataGridStyle}" ItemsSource="{Binding GroupsList}"></DataGrid>
    </Grid>
</Page>
